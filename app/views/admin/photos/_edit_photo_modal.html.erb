<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Edit Photo</h4>
    </div>
    <%= form_for @photo, url: admin_photo_path(@photo), method: 'put', class: 'form-inline', html: { multipart: true }, remote: true do |f| %>
      <div class="modal-body">
        <dl class="dl-horizontal">
          <dt>Caption:</dt>
          <dd><%= f.text_field :caption, :class => 'input-xlarge' %></dd>
          <dt>Tags:</dt>
          <dd>
            <%= f.text_field :collection_names, value: @photo.collections.pluck(:name).join(', '), class: 'input-xlarge', placeholder: 'Add tags', autocomplete: 'off' %>
            <span class='inline-text'>Separate tags by comma(,)</span>
          </dd>
        </dl>
      </div>
      <div class="modal-footer">
        <%= f.submit 'Save', :class => 'btn btn-primary', :style => 'margin-bottom:10px;' %>
      </div>
    <% end %>
  </div>
</div>
<script type="text/javascript">
  Fontli.Users.tagAutocomplete();
</script>
